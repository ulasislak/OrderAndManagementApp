@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lotus - Endüstriyel Metal İşleme</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Arial, sans-serif;
        }

        html {
            scroll-behavior: smooth;
        }

        /* Header Styles */
        .header {
            height: 100vh;
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1533106497176-45ae19e68ba2?auto=format&fit=crop&q=80&w=1920') center/cover no-repeat;
            position: relative;
        }

        .nav {
            position: fixed;
            width: 100%;
            padding: 20px 50px;
            background: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(10px);
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 1000;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .logo {
            color: #FFFFFF;
            font-size: 2rem;
            font-weight: bold;
            letter-spacing: 2px;
        }

        .nav-links {
            display: flex;
            gap: 30px;
        }

            .nav-links a {
                color: #FFFFFF;
                text-decoration: none;
                font-weight: 500;
                transition: opacity 0.3s;
                text-transform: uppercase;
                letter-spacing: 1px;
                font-size: 0.9rem;
            }

                .nav-links a:hover {
                    opacity: 0.7;
                }

        .hero {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: #FFFFFF;
            padding: 0 20px;
        }

            .hero h1 {
                font-size: 4rem;
                margin-bottom: 20px;
                letter-spacing: 2px;
                line-height: 1.2;
                text-transform: uppercase;
            }

            .hero p {
                font-size: 1.2rem;
                max-width: 700px;
                margin-bottom: 30px;
                line-height: 1.6;
                color: #CCCCCC;
            }

        .cta-btn {
            padding: 15px 40px;
            background: #FFFFFF;
            color: #000000;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

            .cta-btn:hover {
                background: #000000;
                color: #FFFFFF;
                outline: 2px solid #FFFFFF;
            }

        /* Services Section */
        .services {
            padding: 100px 50px;
            background: #000000;
            color: #FFFFFF;
        }

        .section-title {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 50px;
            position: relative;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: -15px;
                left: 50%;
                transform: translateX(-50%);
                width: 100px;
                height: 2px;
                background: #FFFFFF;
            }

        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .service-card {
            background: #111111;
            padding: 40px;
            text-align: center;
            transition: transform 0.3s;
            border: 1px solid #333333;
        }

            .service-card:hover {
                transform: translateY(-10px);
                border-color: #FFFFFF;
            }

        .service-icon {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        /* Projects Section */
        .projects {
            padding: 100px 50px;
            background: #111111;
            color: #FFFFFF;
        }

        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .project-card {
            position: relative;
            overflow: hidden;
            height: 400px;
            border: 1px solid #333333;
        }

            .project-card img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s;
                filter: grayscale(50%);
            }

            .project-card:hover img {
                transform: scale(1.1);
                filter: grayscale(0%);
            }

        .project-info {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 20px;
            background: rgba(0, 0, 0, 0.9);
            transform: translateY(100%);
            transition: transform 0.3s;
        }

        .project-card:hover .project-info {
            transform: translateY(0);
        }

        /* Stats Section */
        .stats {
            padding: 100px 50px;
            background: linear-gradient(rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.9)), url('https://images.unsplash.com/photo-1565608087341-404b25492fee?auto=format&fit=crop&q=80&w=1920') center/cover fixed no-repeat;
            color: #FFFFFF;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 30px;
            max-width: 1200px;
            margin: 0 auto;
            text-align: center;
        }

        .stat-item .number {
            font-size: 3.5rem;
            font-weight: bold;
            margin-bottom: 10px;
            letter-spacing: 2px;
        }

        .stat-item .label {
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #CCCCCC;
        }

        /* Footer */
        .footer {
            background: #000000;
            color: #FFFFFF;
            padding: 50px;
            text-align: center;
            border-top: 1px solid #333333;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer h3 {
            font-size: 2rem;
            margin-bottom: 20px;
            letter-spacing: 4px;
        }

        .social-links {
            margin: 20px 0;
        }

            .social-links a {
                color: #FFFFFF;
                margin: 0 15px;
                font-size: 1.5rem;
                transition: opacity 0.3s;
                text-decoration: none;
            }

                .social-links a:hover {
                    opacity: 0.6;
                }

        .login-link {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            border: 1px solid #FFFFFF;
            color: #FFFFFF;
            text-decoration: none;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .login-link:hover {
                background: #FFFFFF;
                color: #000000;
            }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .nav

        {
            padding: 20px;
            flex-direction: column;
        }

        .nav-links {
            margin-top: 20px;
            flex-direction: column;
            text-align: center;
        }

        .hero h1 {
            font-size: 2.5rem;
        }

        .hero p {
            font-size: 1rem;
        }

        .services,
        .projects,
        .stats {
            padding: 50px 20px;
        }

        .project-card {
            height: 300px;
        }

        }
    </style>
</head>
<body>
    <header class="header" id="home">
        <nav class="nav">
            <div class="logo">LOTUS</div>
            <div class="nav-links">
                <a href="#home">Ana Sayfa</a>
                <a href="#services">Hizmetler</a>
                <a href="#projects">Projeler</a>
                <a href="#contact">İletişim</a>
            </div>
        </nav>
        <div class="hero">
            <h1>Metal İşlemede Mükemmellik</h1>
            <p>40 yıllık tecrübemizle endüstriyel çözümler sunuyoruz. Modern teknoloji ve uzman kadromuzla yanınızdayız.</p>
            <a href="#contact" class="cta-btn">İletişime Geçin</a>
        </div>
    </header>

    <section class="services" id="services">
        <h2 class="section-title">Hizmetlerimiz</h2>
        <div class="services-grid">
            <div class="service-card">
                <div class="service-icon">⚙️</div>
                <h3>CNC İşleme</h3>
                <p>Hassas ölçüm ve kaliteli işçilik ile özel parça üretimi</p>
            </div>
            <div class="service-card">
                <div class="service-icon">🔧</div>
                <h3>Metal Kesim</h3>
                <p>Modern teknoloji ile hassas metal kesim hizmetleri</p>
            </div>
            <div class="service-card">
                <div class="service-icon">🏭</div>
                <h3>Endüstriyel Üretim</h3>
                <p>Seri üretim ve özel sipariş çözümleri</p>
            </div>
        </div>
    </section>

    <section class="projects" id="projects">
        <h2 class="section-title">Projelerimiz</h2>
        <div class="projects-grid">
            <div class="project-card">
                <img src="https://images.unsplash.com/photo-1533106497176-45ae19e68ba2?auto=format&fit=crop&q=80&w=1920" alt="Metal işleme">
                <div class="project-info">
                    <h3>Endüstriyel Ekipman Üretimi</h3>
                    <p>Özel tasarım endüstriyel ekipman üretimi</p>
                </div>
            </div>
            <div class="project-card">
                <img src="https://images.unsplash.com/photo-1590959651373-a3db0f38a961?auto=format&fit=crop&q=80&w=1920" alt="Metal kesim">
                <div class="project-info">
                    <h3>Hassas Metal Kesim</h3>
                    <p>Yüksek hassasiyetli CNC kesim işlemleri</p>
                </div>
            </div>
            <div class="project-card">
                <img src="https://images.unsplash.com/photo-1565608087341-404b25492fee?auto=format&fit=crop&q=80&w=1920" alt="Özel üretim">
                <div class="project-info">
                    <h3>Özel Üretim Projeler</h3>
                    <p>Müşteri taleplerine özel çözümler</p>
                </div>
            </div>
        </div>
    </section>

    <section class="stats">
        <div class="stats-grid">
            <div class="stat-item">
                <div class="number">40+</div>
                <div class="label">Yıllık Tecrübe</div>
            </div>
            <div class="stat-item">
                <div class="number">1000+</div>
                <div class="label">Tamamlanan Proje</div>
            </div>
            <div class="stat-item">
                <div class="number">100+</div>
                <div class="label">Uzman Çalışan</div>
            </div>
            <div class="stat-item">
                <div class="number">50+</div>
                <div class="label">Kurumsal Müşteri</div>
            </div>
        </div>
    </section>

    <footer class="footer" id="contact">
        <div class="footer-content">
            <h3>LOTUS</h3>
            <p>Kaliteli metal işçiliğinde 40 yıllık tecrübe</p>
            <div class="social-links">
                <a href="#" aria-label="Facebook">📱</a>
                <a href="#" aria-label="Twitter">📞</a>
                <a href="#" aria-label="Instagram">📧</a>
            </div>
            <a href="/login" class="login-link">Giriş Yap</a>
            <p>&copy; 2024 Lotus. Tüm hakları saklıdır.</p>
        </div>
    </footer>
</body>
</html>