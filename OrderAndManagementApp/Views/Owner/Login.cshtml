@using OrderAndManagementApp.ViewModel
@model OwnerVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner Portal | Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary: #4361ee;
            --primary-light: #4895ef;
            --secondary: #3f37c9;
            --dark: #1b263b;
            --light: #f8f9fa;
            --success: #4cc9f0;
            --danger: #f72585;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(45deg, #f6f7fb 0%, #e9ecf5 100%);
            position: relative;
            overflow: hidden;
        }

        .container {
            width: 100%;
            max-width: 450px;
            padding: 2rem;
            position: relative;
            z-index: 1;
        }

        .login-card {
            background: white;
            border-radius: 30px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.04), 0 2px 6px rgba(0, 0, 0, 0.04), 0 0 1px rgba(0, 0, 0, 0.04);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .login-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08), 0 4px 12px rgba(0, 0, 0, 0.06), 0 0 2px rgba(0, 0, 0, 0.04);
            }

        .card-header {
            background: linear-gradient(120deg, var(--primary), var(--secondary));
            padding: 2.5rem 2rem;
            text-align: center;
            position: relative;
        }

            .card-header::after {
                content: '';
                position: absolute;
                bottom: -50px;
                left: 0;
                right: 0;
                height: 50px;
                background: inherit;
                filter: blur(20px);
                opacity: 0.7;
            }

            .card-header h1 {
                color: white;
                font-size: 2.2rem;
                font-weight: 600;
                margin-bottom: 0.75rem;
                letter-spacing: -0.5px;
            }

            .card-header p {
                color: rgba(255, 255, 255, 0.9);
                font-size: 1.1rem;
                font-weight: 300;
            }

        .card-body {
            padding: 2.5rem 2rem 2rem;
            background: white;
            position: relative;
        }

        .form-group {
            margin-bottom: 2rem;
            position: relative;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.8rem;
                font-weight: 500;
                color: var(--dark);
                font-size: 1rem;
            }

        .form-control {
            width: 100%;
            padding: 1.2rem 1.2rem 1.2rem 3.2rem;
            border: 2px solid #edf2f7;
            border-radius: 16px;
            font-size: 1.05rem;
            transition: all 0.25s ease;
            background: #f8fafc;
            color: var(--dark);
        }

            .form-control:focus {
                border-color: var(--primary);
                background: white;
                box-shadow: 0 0 0 5px rgba(67, 97, 238, 0.1);
            }

        .input-icon {
            position: absolute;
            left: 1.2rem;
            top: 3.2rem;
            color: var(--primary);
            font-size: 1.2rem;
            pointer-events: none;
        }

        .btn {
            display: block;
            width: 100%;
            padding: 1.2rem;
            border-radius: 16px;
            font-size: 1.1rem;
            font-weight: 600;
            text-transform: none;
            letter-spacing: 0;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            background: linear-gradient(120deg, var(--primary), var(--secondary));
            color: white;
            box-shadow: 0 4px 15px rgba(67, 97, 238, 0.2);
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(67, 97, 238, 0.3);
            }

        .btn-outline {
            background: transparent;
            border: 2px solid var(--primary);
            color: var(--primary);
            margin-top: 1.2rem;
            box-shadow: none;
        }

            .btn-outline:hover {
                background: var(--primary);
                color: white;
                box-shadow: 0 4px 15px rgba(67, 97, 238, 0.2);
            }

        .divider {
            display: flex;
            align-items: center;
            margin: 2rem 0;
        }

            .divider::before,
            .divider::after {
                content: "";
                flex: 1;
                height: 1px;
                background: linear-gradient(to right, transparent, #e2e8f0, transparent);
            }

        .divider-text {
            padding: 0 1.5rem;
            font-size: 1rem;
            color: #94a3b8;
            font-weight: 500;
        }

        .forgot-password {
            text-align: center;
            margin: 1.5rem 0;
        }

            .forgot-password a {
                color: var(--primary);
                text-decoration: none;
                font-size: 1rem;
                font-weight: 500;
                transition: all 0.2s ease;
            }

                .forgot-password a:hover {
                    color: var(--secondary);
                    text-decoration: none;
                }

        .field-validation-error {
            color: var(--danger);
            font-size: 0.9rem;
            margin-top: 0.5rem;
            display: block;
        }

        .input-validation-error {
            border-color: var(--danger) !important;
        }

            .input-validation-error:focus {
                box-shadow: 0 0 0 4px rgba(247, 37, 133, 0.1) !important;
            }

       
            .container

        {
            padding: 1rem;
        }

        .login-card {
            border-radius: 20px;
        }

        .card-header {
            padding: 2rem 1.5rem;
        }

            .card-header h1 {
                font-size: 1.8rem;
            }

        .card-body {
            padding: 2rem 1.5rem;
        }

        .form-control {
            font-size: 1rem;
            padding: 1rem 1rem 1rem 3rem;
        }

        .btn {
            padding: 1rem;
            font-size: 1rem;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-card">
            <div class="card-header">
                <h1>Welcome Back</h1>
                <p>Sign in to continue to your account</p>
            </div>

            <div class="card-body">
                <form id="loginForm" asp-action="Login" asp-controller="Owner" method="post">
                    <div class="form-group">
                        <label asp-for="Mail">Email Address</label>
                        <i class="fas fa-envelope input-icon"></i>
                        <input asp-for="Mail" type="email" class="form-control" placeholder="Enter your email" required>
                        <span asp-validation-for="Mail" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required>
                        <span asp-validation-for="Password" class="field-validation-error"></span>
                    </div>

                    <button type="submit" class="btn">Sign In</button>

                    <div class="forgot-password">
                        <a href="#">Forgot your password?</a>
                    </div>

                    <div class="divider">
                        <span class="divider-text">OR</span>
                    </div>

                    <a href="@Url.Action("Register", "Owner")" class="btn btn-outline">
                        Create New Account
                    </a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>