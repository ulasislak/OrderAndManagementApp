@using OrderAndManagementApp.ViewModel
@model ProductVM
@{
    ViewData["Title"] = "Ürün Detayları";
    Layout = "~/Views/Shared/_nestedLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --dark: #1b263b;
            --light: #f8f9fa;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: var(--primary);
            color: white;
            padding: 1rem 0;
            text-align: center;
        }

        footer {
            background-color: var(--primary);
            color: white;
            padding: 1rem 0;
            text-align: center;
            margin-top: auto;
        }

        .container {
            width: 100%;
            max-width: 500px;
            padding: 2rem;
            margin: auto;
            flex-grow: 1;
        }

        .product-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            padding: 2rem;
            text-align: center;
        }

        .product-image {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            border: 1px solid #e9ecef;
        }

        .detail-group {
            margin-bottom: 1.5rem;
            text-align: left;
            padding: 1rem;
            background-color: #f8f9fa;
            border-radius: 10px;
        }

        .detail-label {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.5rem;
            display: block;
        }

        .detail-value {
            color: #495057;
            font-size: 0.95rem;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn {
            color: white;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            flex: 1;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        .btn-edit {
            background: linear-gradient(to right, #4cc9f0, #4895ef);
        }

            .btn-edit:hover {
                background: linear-gradient(to right, #4895ef, #4cc9f0);
                box-shadow: 0 5px 15px rgba(72, 149, 239, 0.4);
            }

        .btn-back {
            background: linear-gradient(to right, #adb5bd, #6c757d);
        }

            .btn-back:hover {
                background: linear-gradient(to right, #6c757d, #adb5bd);
                box-shadow: 0 5px 15px rgba(108, 117, 125, 0.4);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="product-card">
            <h2>Product Details</h2>

            @if (!string.IsNullOrEmpty(Model?.PhotoUrlPath))
            {
                <img src="@Model.PhotoUrlPath" alt="@Model.ProductName" class="product-image">
            }
            else if (!string.IsNullOrEmpty(Model?.PhotoUrlPath)) // Alternatif yazım
            {
                <img src="@Model.PhotoUrlPath" alt="@Model.ProductName" class="product-image">
            }
            else
            {
                <div class="product-image-placeholder">
                    <i class="fas fa-image"></i>
                </div>
            }

            <div class="detail-group">
                <span class="detail-label">Product Name</span>
                <p class="detail-value">@Model.ProductName</p>
            </div>

            <div class="detail-group">
                <span class="detail-label">Description</span>
                <p class="detail-value">@Model.Description</p>
            </div>

            <div class="detail-group">
                <span class="detail-label">Quantity</span>
                <p class="detail-value">@Model.Piece</p>
            </div>

            <div class="action-buttons">
                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-edit">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="AllProduct" class="btn btn-back">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</body>
</html>